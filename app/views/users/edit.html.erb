<%= form_with model: @user do |form| %>
	<div class="form-group">
		<%= form.label :job_field %> 
		<%= form.text_field :job_field, class: "form-control", value: @user.job_field%> 
	</div>
	<div class="form-group">
		<%= form.label :job_title %> 
		<%= form.text_field :job_title, class: "form-control", value: @user.job_title%> 
	</div>
	<div class="form-group">
		<%= form.label :blurb %> 
		<%= form.text_area :blurb, class: "form-control", value: @user.blurb%> 
	</div>
	<%= form.submit "Update Profile", class: "btn btn-success" %>
<%end%>